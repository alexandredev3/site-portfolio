{% extends "layout.njk" %}

{% block head %}
  <title>Portfolio - Mayk Brito</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
{% endblock %}
  
{% block content %}
  <div id="wrapper">
    <h1>Aulas</h1>
  </div>

  <section class="cards">

  {% for item in items %}

    <div class="card" id="{{item.id}}">
      <div class="card__image-container {{'featured-wrapper if item.featured'}}">
      <!--
        {{ 'featured-wrapper' if item.featured }} se tiver item.featured la no arquivo
        de dados, ele vai adcionar a class featured-wrapper
      -->
        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
        {% if item.featured %}
          <div class="featured">Featured</div>
        {% endif %}
        <!--
        Se tiver o featured la do arquivo "data" como true ele vai colocar
        esse if
        -->
      </div>
      <div class="card__content">
        <p>{{item.title}}</p>
      </div>
      <div class="card__info">
        <p>{{item.duration}}</p>
        <p class="card__price">{{item.price}}</p>
      </div>
    </div>

  {% endfor %}

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">
          close
        </i>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="/scripts.js"></script>
{% endblock %}